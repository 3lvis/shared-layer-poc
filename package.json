{
  "name": "shared-layer-poc",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:web": "bun apps/web/scripts/dev.mjs",
    "web": "bun apps/web/scripts/dev.mjs",
    "build:web": "bun apps/web/scripts/build.mjs",
    "dev:mobile": "bun --cwd apps/mobile x react-native start",
    "ios": "bun --cwd apps/mobile x react-native run-ios --simulator 'iPhone 16 Pro'",
    "android": "bun --cwd apps/mobile x react-native run-android",
    "android:release": "cd apps/mobile/android && ./gradlew clean assembleRelease",
    "android:install:release": "adb install -r apps/mobile/android/app/build/outputs/apk/release/app-release.apk",
    "release": "bun apps/web/scripts/build.mjs && bun run android:release",
    "typecheck": "bun x tsc -b --pretty",
    "test": "bun --cwd packages/shared run test"
  },
  "devDependencies": {
    "@react-native-community/cli": "*"
  },
  "packageManager": "bun@1.1.30"
}
