# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Explicitly set iOS deployment target to match RN 0.82 toolchain expectations
platform :ios, '15.1'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'mobile' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  target 'mobileTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Ensure FBReactNativeSpec check script does not always run (silences Xcode note)
    installer.pods_project.targets.each do |t|
      t.build_phases.each do |phase|
        next unless phase.respond_to?(:name)

        # Quiet FBReactNativeSpec check: don't always run, and provide an output stamp
        if phase.name == '[CP-User] [RN]Check FBReactNativeSpec'
          phase.always_out_of_date = false if phase.respond_to?(:always_out_of_date=)
          if phase.respond_to?(:output_paths) && phase.respond_to?(:output_paths=)
            outputs = (phase.output_paths || []) + ['$(DERIVED_FILE_DIR)/FBReactNativeSpec.stamp']
            phase.output_paths = outputs.uniq
          end
        end

        # Quiet Hermes replacement: don't always run, and provide an output stamp
        if phase.name == '[CP-User] [Hermes] Replace Hermes for the right configuration, if needed'
          phase.always_out_of_date = false if phase.respond_to?(:always_out_of_date=)
          if phase.respond_to?(:output_paths) && phase.respond_to?(:output_paths=)
            outputs = (phase.output_paths || []) + ['$(DERIVED_FILE_DIR)/HermesConfig.stamp']
            phase.output_paths = outputs.uniq
          end
        end
      end
    end

    # Force Pods to use Xcode default toolchain and scrub Metal paths
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |cfg|
        bs = cfg.build_settings

        # Force default toolchain (remove Metal)
        bs['TOOLCHAINS'] = 'com.apple.dt.toolchain.XcodeDefault'
        # Point via DEVELOPER_DIR, so it's not hardcoded to /Applications
        bs['TOOLCHAIN_DIR'] = '$(DEVELOPER_DIR)/Toolchains/XcodeDefault.xctoolchain'

        # Clean any literal Metal simulator Swift paths that may have been injected
        if bs['LIBRARY_SEARCH_PATHS']
          paths = Array(bs['LIBRARY_SEARCH_PATHS']).map(&:to_s)
          paths.reject! { |p| p.include?('Metal.xctoolchain/usr/lib/swift/iphonesimulator') }
          # Ensure the canonical variable-based path is present
          paths << '$(TOOLCHAIN_DIR)/usr/lib/swift/$(PLATFORM_NAME)'
          bs['LIBRARY_SEARCH_PATHS'] = paths.uniq
        end

        # Optional: remove duplicate -lc++ if present
        if bs['OTHER_LDFLAGS']
          flags = Array(bs['OTHER_LDFLAGS']).map(&:to_s)
          cxx_count = flags.count('-lc++')
          flags.delete('-lc++') if cxx_count && cxx_count > 1
          bs['OTHER_LDFLAGS'] = flags
        end
      end
    end
  end
end
